{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "strict": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "compileOnSave": true,
}